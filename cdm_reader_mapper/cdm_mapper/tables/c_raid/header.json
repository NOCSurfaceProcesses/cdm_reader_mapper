{
  "report_id": {
    "sections": [
      "general",
      "drifter_characteristics"
    ],
    "elements": [
      "FORMAT_VERSION",
      "DRIFTER_NUMBER"
    ],
    "transform": "string_join_add",
    "kwargs": {
      "prepend": "C-RAID",
      "separator": "-"
    }
  },
  "application_area": {
    "default": [
      1,
      7,
      10,
      11
    ]
  },
  "report_type": {
    "default": 0
  },
  "station_type": {
    "default": 2
  },
  "platform_type": {
    "default": 5
  },
  "platform_sub_type": {
    "default": 69
  },
  "primary_station_id": {
    "sections": "drifter_deployment",
    "elements": "DEPLOYMENT_REFERENCE_STATION_ID"
  },
  "station_record_number": {
    "default": 1
  },
  "primary_station_id_scheme": {
    "fill_value": 8,
    "code_table": "primary_station_id_scheme"
  },
  "longitude": {
    "sections": "drifter_measurements",
    "elements": "LONGITUDE",
    "transform": "longitude_360to180",
    "decimal_places": "decimal_places"
  },
  "latitude": {
    "sections": "drifter_measurements",
    "elements": "LATITUDE",
    "decimal_places": "decimal_places"
  },
  "location_accuracy": {
    "sections": "drifter_measurements",
    "elements": "POSITION_ACCURACY",
    "decimal_places": 0
  },
  "location_quality": {
    "default": 3
  },
  "crs": {
    "default": 0
  },
  "height_of_station_above_local_ground": {
    "sections": "drifter_sensor",
    "elements": "SENSOR_LEVEL_DEPTH",
    "transform": "float_opposite"
  },
  "height_of_station_above_sea_level": {
    "sections": "drifter_sensor",
    "elements": "SENSOR_LEVEL_DEPTH",
    "transform": "float_opposite"
  },
  "report_meaning_of_timestamp": {
    "default": 2
  },
  "report_timestamp": {
    "sections": "drifter_measurements",
    "elements": "JULD",
    "transform": "datetime_craid"
  },
  "report_duration": {
    "default": 11
  },
  "report_time_quality": {
    "default": 2
  },
  "duplicate_status": {
    "default": 4
  },
  "record_timestamp": {
    "transform": "datetime_utcnow"
  },
  "history": {
    "sections": "drifter_history",
    "elements": "HISTORY_INSTITUTION",
    "transform": "lineage"
  },
  "source_id": {
    "sections": "global_attributes",
    "elements": "source"
  }
}
